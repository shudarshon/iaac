{
  "variables": {
    "region": "us-east-1",
    "source_ami": "ami-66506c1c",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "ami_name": "Xenial 16.04 - Java",
      "ami_description": "An Ubuntu AMI that comes with Java pre-installed.",
      "instance_type": "{{user `instance_type`}}",
      "region": "{{user `region`}}",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_key_id`}}",
      "ssh_timeout": "3m",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_pty": "true",
      "associate_public_ip_address": "True",
      "source_ami": "{{user `source_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },
      "tags": {
        "CreationDate": "{{timestamp}}",
        "Builder": "Packer",
        "OS_Version": "Ubuntu",
        "Release": "Xenial 16.04"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/bootstrap"
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook/play.yml",
      "playbook_dir": "playbook"
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf /tmp/*",
        "rm -f /tmp/.ansible-lock.*"
      ]
    }
  ]
}
